#set($top_menu="switcher")
#set($side_bar="cluster_node_detail")
#set($tab_bar="register_form")
#parse("shared/header.vm")
#parse("shared/top_menu.vm")
#parse("shared/switcher_side_bar.vm")
#parse("shared/switcher_tab_bar.vm")
<div class="row-fluid">
<form id="register_form" class="form-horizontal" action="/huokangtou-server/switcher/cluster_node_detail/do_register" method="post">
    <fieldset>
    <legend>添加集群节点</legend>
    <div class="control-group">
    <label class="control-label" for="">集群</label>
        <div class="controls">
            #springBind("ClusterNodeDetail.cluster")
            <input id="${status.expression}" name="${status.expression}" type="text" class="input-xlarge" placeholder="集群" value="$!status.value">
            #if ($!{status.errorMessage}) <p class="text-error">$!{status.errorMessage}</p> #end
        </div>
    </div>
    <div class="control-group">
    <label class="control-label" for="">节点</label>
        <div class="controls">
            #springBind("ClusterNodeDetail.node")
            <input id="${status.expression}" name="${status.expression}" type="text" class="input-xlarge" placeholder="节点" value="$!status.value">
            #if ($!{status.errorMessage}) <p class="text-error">$!{status.errorMessage}</p> #end
        </div>
    </div>
    <div class="control-group">
        <label class="control-label" for="">主机</label>
        <div class="controls">
            #springBind("ClusterNodeDetail.ip")
            <input id="${status.expression}" name="${status.expression}" type="text" class="input-xlarge" placeholder="主机" value="$!status.value">
            #if ($!{status.errorMessage}) <p class="text-error">$!{status.errorMessage}</p> #end
        </div>
    </div>
    <div class="control-group">
        <label class="control-label" for="">端口</label>
        <div class="controls">
            #springBind("ClusterNodeDetail.port")
            <input id="${status.expression}" name="${status.expression}" type="text" class="input-xlarge" placeholder="端口" value="$!status.value">
            #if ($!{status.errorMessage}) <p class="text-error">$!{status.errorMessage}</p> #end
        </div>
    </div>
    <div class="control-group">
        <div class="controls">
                <button id="submit" type="text" class="btn btn-large btn-primary">提交</button>
        </div>
    </div>
</fieldset>
</form>
</div>
#parse("shared/footer.vm")
